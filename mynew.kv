<Button>:
    size_hint: 0.3,0.3
    color: (0.9,0.5,0.3,1)
    background_color: (1,1,1,1)

<TextInput>:
    multiline: False
    size_hint: 0.3,0.05

<FloatLayout>:
    order: order
    btn: btn
    hint: hint
    Label:
        text: "Order of PSK Modulation: "
        pos_hint: {"x":-0.3, "y":0.42}

    TextInput:
        id: order
        pos_hint: {"x": 0.35, "top": 0.95}

    Button:
        id: btn
        text: "calculate mpsk"
        on_press: root.btnfunc()
        pos_hint: {"x":0.38, "top":0.3}
        size_hint: 0.2,0.2

    Label:
        id: hint
        text: "Message log: "
        pos_hint: {"x":0.1,"top":0.55}
